@import "bootstrap-sprockets";
@import "bootstrap";
@import "shared";

html, body, .container-fluid { height: 100%; }
body { background: #e9e9eb };

header.navbar {
  margin-bottom: -51px;
}

.devise-box {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  min-height: 100%;

  h2 {
    margin-top: 0px;
  }

  .column {
    float: none;
    margin: 20px auto;
    padding: 30px 30px;
    background: white;
    border-radius: 4px;
  }

  form.form-horizontal {
    margin-top: 30px;

    .form-errors ul {
      padding-left: 20px;
    }

    .has-error .help-block {
      display: none;
    }

    a.forgot-password {
      float: right;
    }

    .line-through {
      position: relative;
      overflow: hidden;
      text-align: center;

      span {
        position: relative;
        padding: 0 10px;
        color: gray;
      }

      span:before, span:after {
        content: "";
        position: absolute;
        height: 1px;
        width: 9999px;
        top: 50%;
        background: #ddd;
      }

      span:before {
        right: 100%;
      }

      span:after {
        left: 100%;
      }
    }

    .btn-sign-in, .btn-sign-up, .btn-confirmation, .btn-reset-password, .line-through {
      margin-top: 20px;
      width: 100%;
    }

    .form-group {
      margin-left: 0px;
      margin-right: 0px;
      margin-bottom: 0px;

      input[type="email"], input[type="password"] {
        border-radius: 0px;
      }

      input[type="email"] {
        border-top-left-radius: 4px;
        border-top-right-radius: 4px;
      }

      input[type="password"] {
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
      }
    }
  }
}

form.confirmation-form, form.password-form, form.unlock-form {
  input[type="email"] {
    border-radius: 4px !important;
  }
}

.devise-box form.registration-form .form-group {
  input[type="text"], input[type="email"], input[type="password"] {
    border-radius: 0px;
  }

  input[type="text"] {
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
  }

  input[type="password"].password-confirmation {
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
  }
}

@media (max-width: $screen-xs-max) {
  .devise-box.row {
    margin: 0px;

    .column {
      padding: 15px;
    }
  }
}
